<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gradeInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/gradeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_48dp"
            android:gravity="center"
            android:maxHeight="@dimen/circle_max_size"
            android:maxWidth="@dimen/circle_max_size"
            android:minHeight="@dimen/circle_max_size"
            android:minWidth="@dimen/circle_max_size"
            android:text="gradeNumber"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="?android:textColorPrimaryInverse"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:clipChildren="false"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/gradeType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="gradeType"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

            <TextView
                android:id="@+id/gradeDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="gradeDay"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>