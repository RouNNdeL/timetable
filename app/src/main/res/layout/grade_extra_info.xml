<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gradeExtraInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="64dp"
    android:orientation="vertical"
    android:visibility="visible">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="#1F000000"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opis: "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/gradeDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liczby rzeczywiste"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodał: "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/gradeCreator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pan Mareczek"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waga: "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/gradeWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Licz do średinej: "
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/gradeCountToAverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tak"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>